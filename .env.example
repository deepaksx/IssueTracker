# Flask Environment Configuration
# Copy this file to .env and update with your values

# Application Environment (development, production, testing)
FLASK_ENV=production

# Secret Key for session management (generate a random string for production)
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database path (optional, defaults to issue_tracker.db)
DATABASE_PATH=issue_tracker.db

# Upload folder path (optional, defaults to ./uploads)
UPLOAD_FOLDER=uploads

# Session cookie security (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=True

# Admin user credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
